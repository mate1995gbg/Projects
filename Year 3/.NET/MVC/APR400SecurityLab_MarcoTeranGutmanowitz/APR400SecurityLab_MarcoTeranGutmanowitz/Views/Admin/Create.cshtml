@model APR400SecurityLab_MarcoTeranGutmanowitz.Models.RoleViewModel
@{
    <div class="row">
        <div class="col-md-4">
            <form id="registerForm" asp-controller="admin" asp-action="create" method="post">
                <h2>Add a new role.</h2>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <input asp-for="RoleName" class="form-control" aria-required="true" />
                    <label asp-for="RoleName"></label>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                </div>
                <button id="newRoleSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Add new Role</button>
            </form>
        </div>
    </div>
}
