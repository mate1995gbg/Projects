<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="@color/purple_background">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="15dp"
        android:background="@drawable/circle_background"
        android:src="@drawable/ic_trophy_svgrepo_com"></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:fontFamily="sans-serif-condensed"
        android:textSize="40dp"
        android:textColor="@android:color/white"/>

    <!-- Calorie Display TextView -->
    <TextView
        android:id="@+id/calorieTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calories Burned: 0"
        android:textSize="18sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_marginBottom="16dp" />

    <!-- All buttons now have consistent width, height and margin -->
    <Button
        android:id="@+id/newWorkoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Workout"
        android:layout_marginBottom="16dp"/>

    <!-- Warning Buttons have been slightly redesigned -->
    <Button
        android:id="@+id/btnWorkoutWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@color/red_warning"
        android:text="⚠ Select profile before starting workout"
        android:textSize="10sp"
        android:layout_marginBottom="16dp"
        android:clickable="false"/>

    <Button
        android:id="@+id/workoutHistoryButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout History"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnHistoryWarning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:background="@drawable/rounded_button"
        app:backgroundTint="@color/red_warning"
        android:text="⚠ Select profile to see history"
        android:textSize="10sp"
        android:layout_marginBottom="16dp"
        android:clickable="false"/>
    <Button
        android:id="@+id/calorieTrackerOverviewButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calorie Tracker Overview"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/profileBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profile"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/deleteDatabaseButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All Workouts"
        android:layout_marginBottom="16dp"/>

    <!-- Dummy view has been removed -->
    <TextView
        android:id="@+id/randomQuoteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@android:color/white"
        android:layout_marginTop="16dp"/>
</LinearLayout>
