<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Left Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/warningTitleText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning type:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/warningTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title here" />
            <TextView
                android:id="@+id/warningLevelText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning Level:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/warningLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Level here" />
            <TextView
                android:id="@+id/warningAreaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="In area:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/warningArea"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="area here" />
            <TextView
                android:id="@+id/warningStartDateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Warning first issued:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/warningStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date start here" />

        </LinearLayout>

        <!-- Right Section -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <TextView
                android:id="@+id/warningDescriptionText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description:"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/warningDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Description here" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
